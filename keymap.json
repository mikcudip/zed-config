[
  // ---- Disable keys globally ----
  {
    "bindings": {
      "ctrl-q": null
    }
  },
  // ----- Normal & Visual Mode: General, Git, UI, etc. -----
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // Git
      "space g h d": "editor::ToggleSelectedDiffHunks",
      "space g s": "git_panel::ToggleFocus",

      // UI toggles
      "space t i": "editor::ToggleInlayHints",
      "space u w": "editor::ToggleSoftWrap",

      // Zen mode (medio experimental todavía)
      "space c z": "workspace::ToggleCenteredLayout",

      // Markdown
      "space m p": "markdown::OpenPreview",
      "space m P": "markdown::OpenPreviewToTheSide",

      // Proyectos y navegación
      "space f p": "projects::OpenRecent",
      "space s w": "pane::DeploySearch",

      // AI
      "space a c": "agent::ToggleFocus",

      // Go to file estilo Vim
      "g f": "editor::OpenExcerpts"
    }
  },

  // ----- Solo en Normal Mode -----
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      // Movimiento entre panes estilo tmux
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",

      // Split de panes
      "ctrl-k k": "pane::SplitUp",
      "ctrl-k j": "pane::SplitDown",
      "ctrl-k h": "pane::SplitLeft",
      "ctrl-k l": "pane::SplitRight",

      // Acciones del lenguaje (LSP)
      "space c a": "editor::ToggleCodeActions",
      "space .": "editor::ToggleCodeActions",
      "space c r": "editor::Rename",

      // Go to...
      "g d": "editor::GoToDefinition",
      "g D": "editor::GoToDefinitionSplit",
      "g i": "editor::GoToImplementation",
      "g I": "editor::GoToImplementationSplit",
      "g t": "editor::GoToTypeDefinition",
      "g T": "editor::GoToTypeDefinitionSplit",
      "g r": "editor::FindAllReferences",

      // Navegación de diagnósticos
      "] d": "editor::GoToDiagnostic",
      "[ d": "editor::GoToPreviousDiagnostic",
      "] e": "editor::GoToDiagnostic",
      "[ e": "editor::GoToPreviousDiagnostic",

      // Símbolos
      "s s": "outline::Toggle",
      "s S": "project_symbols::Toggle",

      // Diagnósticos
      "space x x": "diagnostics::Deploy",

      // Git - navegación entre cambios
      "] h": "editor::GoToHunk",
      "[ h": "editor::GoToPreviousHunk",

      // Buffers
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "shift-q": "pane::CloseActiveItem",
      "ctrl-q": "pane::CloseActiveItem",
      "space b d": "pane::CloseActiveItem",
      "space b o": "pane::CloseInactiveItems",

      // Guardar
      "ctrl-s": "workspace::Save",
      "space q": "pane::CloseActiveItem",

      // Buscador
      "space space": "file_finder::Toggle",
      "space /": "pane::DeploySearch",

      // Mostrar archivo actual en panel
      "space e": "pane::RevealInProjectPanel",

      // Formatear
      "space f d": "editor::Format",

      // Terminal
      "space t t": "terminal_panel::ToggleFocus"
    }
  },

  // ----- Pane vacío o pantalla compartida -----
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space f p": "projects::OpenRecent"
    }
  },

  // ----- Visual Mode: Comentar código -----
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "g c": "editor::ToggleComments"
    }
  },

  // ----- Insert Mode: Escape rápido -----
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      "j j": "vim::NormalBefore",
      "j k": "vim::NormalBefore"
    }
  },

  // ----- Operador Vim "c": Renombrar o acción -----
  {
    "context": "Editor && vim_operator == c",
    "bindings": {
      "c": "vim::CurrentLine",
      "r": "editor::Rename"
    }
  },
  {
    "context": "Editor && vim_operator == c",
    "bindings": {
      "c": "vim::CurrentLine",
      "a": "editor::ToggleCodeActions"
    }
  },

  // ----- General -----
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-1": "workspace::ToggleZoom",
      "ctrl-2": "workspace::ToggleCenteredLayout"
    }
  },

  // ----- Terminal: Movimiento entre panes -----
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-t": "workspace::ToggleBottomDock"
    }
  },

  // ----- Panel de Proyecto (como netrw) -----
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "shift-a": "project_panel::NewDirectory",
      "r": "project_panel::Rename",
      "d": "project_panel::Trash",
      "shift-d": "project_panel::Delete",
      "y": "project_panel::Copy",
      "x": "project_panel::Cut",
      "p": "project_panel::Paste",
      "c": "project_panel::CollapseAllEntries",
      "f": "project_panel::OpenWithSystem",
      "u": "workspace::CopyPath",
      "i": "workspace::CopyRelativePath",
      "l": "project_panel::OpenPermanent",
      "h": "project_panel::ToggleFocus",
      "q": "workspace::ToggleRightDock",

      // Navegación
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },

  // ----- Panel navigation estilo Vim -----
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown"
    }
  },

  // ----- Atajo estilo VSCode -----
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-b": "workspace::ToggleRightDock"
    }
  },

  // ----- Ejecutar tarea más cercana -----
  {
    "context": "EmptyPane || SharedScreen || vim_mode == normal",
    "bindings": {
      "space r t": ["editor::SpawnNearestTask", { "reveal": "no_focus" }]
    }
  },

  // ----- Sneak motion (estilo EasyMotion) -----
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": ["vim::PushSneak", {}],
      "S": ["vim::PushSneakBackward", {}]
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "s": ["vim::PushSneak", {}],
      "S": ["vim::PushSneakBackward", {}]
    }
  }
  // ----- Subword motion (desactivado porque está medio roto por ahora) -----
  /*
  {
    "context": "VimControl && !menu",
    "bindings": {
      "w": "vim::NextSubwordStart",
      "b": "vim::PreviousSubwordStart",
      "e": "vim::NextSubwordEnd",
      "g e": "vim::PreviousSubwordEnd"
    }
  }
  */
]
