{
  "agent": {
    "default_model": { "provider": "google", "model": "gemini-1.5-flash" },
    "version": "2"
  },
  "project_panel": {
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },
  "hide_mouse": "on_typing_and_movement",
  "theme": "Nord",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": true,
  "ui_font_size": 12,
  "buffer_font_size": 12,
  "agent_font_size": 12,
  "terminal": {
    "font_family": "JetBrains Mono",
    "font_size": 12,
    "line_height": {
      "custom": 1.5
    }
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "gutter": {
    "folds": false,
    "runnables": false,
    "breakpoints": false,
    "code_actions": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "preview_tabs": {
    "enabled": false
  },
  "tab_size": 2,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "vim": {
    "use_system_clipboard": "always",
    "toggle_relative_line_numbers": true
  },
  "languages": {
    "LaTeX": {
      "soft_wrap": "preferred_line_length"
    }
  },
  "wrap_guides": [90],
  "show_wrap_guides": true,
  "unnecessary_code_fade": 0.6
}
